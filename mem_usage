#!/bin/sh

free --bytes | awk \
  -v failthold=0.90 \
  -v warnthold=0.70 \
  '/^Mem:/{
    cached=$7
    buffers=$6
    used=$3
    total=$2
    ratio=(used-(buffers+cached))/total
    if (ratio > failthold)
    {
      print "Memory usage ratio is " ratio
      exit 2
    }
    if (ratio > warnthold)
    {
      print "Memory usage ratio is " ratio
      exit 1
    }
    exit 0
  }'
